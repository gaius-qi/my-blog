#app
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color #2c3e50
  margin 0px

a
  font-family 'Avenir', Helvetica, Arial, sans-serif
  text-decoration none
  color #2c3e50

.v-modal
  background: none !important

.el-dialog-change div:first-child
  border-radius 2rem
  margin-top -1rem
  margin-bottom 0

.el-button
  border-radius 1rem  !important

.el-dialog__body
  padding 0 !important
  margin-top 1.5rem !important

.el-dialog__footer
  padding 0


.el-dialog--small
  width 30% !important
  padding 1rem

.el-form-item
  margin-top 0.5rem !important

.el-input__inner
  width 95% !important
.icon
  border-radius 50%
  z-index 1

.icon:hover
  fill #FA8072 !important
  background-color #F0FFFF

.icon--m
  animation change 5s linear !important
  animation-iteration-count infinite !important
  transition all .5s ease

.icon--ei-chevron-down
  animation change 5s linear !important
  animation-iteration-count infinite !important
  transition all .5s ease
  &:hover
    cursor: pointer

.icon--s
  animation change 5s linear !important
  animation-iteration-count infinite !important
  transition all .5s ease
  &:hover
    transform scale(1.5, 1.5)
    background-color rgba(0, 0, 0, 0)

.icon--ei-arrow-up:hover
  fill #00fa9a !important

.icon-style
  fill #2c3e50 !important
  animation none !important
  &:hover
    fill #00fa9a !important

.icon--ei-chevron-down:hover
  fill #00fa9a
  background-color rgba(0,0,0,0)

.icon--ei-search
  margin-left 0.5rem

.icon--ei-search:hover, .icon--ei-bell:hover, .icon--ei-arrow-up:hover
  background-color rgba(0,0,0,0)

.info-link .icon-style
  top 0.5rem

.info-link .icon-style:hover
  background-color rgba(0,0,0,0)
  fill #00fa9a

.icon--ei-sc-github, .icon--ei-sc-facebook, .icon--ei-sc-twitter, .icon--ei-user
  transition all 0.5s linear

.CodeRay
  .code
    overflow scroll
    background none
    border-radius 1rem
    padding 0 1rem 0 1rem
    box-shadow inset 0 0 0.8rem rgba(0, 0, 0, 0.7)

@keyframes change
  0%, 100%
      fill #FF0000
  25%
      fill #00FFFF
  50%
      fill #FFFF00
  75%
      fill #00fa9a
