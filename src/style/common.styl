  font-family 'SentyZHAO'
  src url('./assets/font/Senty/SentyZHAO.ttf') format('truetype')

@font-face
  font-family 'SentyCHALK'
  src url('./assets/font/Senty/SentyCHALKoriginal.ttf') format('truetype')

